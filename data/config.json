{
  "installer": {
    "name": "VrayBridgeInstaller",
    "bundle_identifier": "com.laublab.vraybridgeinstaller"
  },
  "uninstaller": {
    "enabled": true,
    "target_directory": "$c4d/plugins/C4DInstaller_ExamplePlugin/",
    "name": "uninstall",
    "bundle_identifier": "com.niklasrosenstein.c4dinstaller_uninstaller"
  },
  "readme": {
    "enabled": true,
    "file": "data/readme.pdf"
  },
  "palette": {
    "background": [40, 40, 40],
    "foreground": [200, 200, 200],
    "alternate_background": [70, 70, 70],
    "button_background": [50, 50, 50],
    "button_foreground": [220, 220, 220],
    "button_disabled_background": [70, 70, 70],
    "button_disabled_foreground": [160, 160, 160]
  },
  "features": {
    "!plugin": "$plugin",
    "docs": "$documentation",
    "presets": "$presets"
  },
  "install": {
    "slowdown": 0.5,
    "copyfiles": {
      "plugin": {
        "$src/plugin/": "$c4d/plugins/VrayForC4D/"
      },
      "docs": {
        "$src/doc/": "$c4d/plugins/VrayForC4D/doc/"
      },
      "presets": {
        "$src/library/": "$c4d/library/"
      }
    },
    "dependencies": [
      {
        "name": "MSVC++ 2015 Redistributable (x64) - 14.0.23026",
        "platform": "windows",
        "file": "$src/redist/vc_redist-2015-14.0.23026-x64.exe",
        "args": ["/passive", "/install"],
        "returncodes": [0, 1638]
      },
      {
        "name": "Intel(R) C++ Redistributables on Intel(R) 64 (2017.0.109)",
        "platform": "windows",
        "file": "cmd",
        "args": ["/c", "$src/redist/ww_icl_redist_intel64_2017.0.109.msi", "/passive"]
      },
      {
        "name": "Intel(R) C++ Redistributables on Intel(R) 64 (2017.1.143)",
        "platform": "windows",
        "file": "cmd",
        "args": ["/c", "$src/redist/ww_icl_redist_intel64_2017.1.143.msi", "/passive"]
      }
    ]
  }
}
